<Element
  width="100%"
  height="100%"
  backgroundColor="glm::vec4(0, 0, 0, 200)"
  positionType="Absolute"
  alignItemsVer="End">

<Element
  element="mContent"
  width="90%"
  height="80%"
  marginBottom="30dp"
  backgroundColor="glm::vec4(20, 20, 20, 255)"
  borderRadius="glm::vec4(20)"
 
  overflow="Hidden"
  orientation="Vertical">

  <Element
    width="100%"
    height="50dp"
    backgroundColor="#4b31b0"
    alignItemsHor="SpaceBetween">
    <Element
      height="100%">
      <FontIcon
        marginLeft="20dp"
        width="30dp"
        aspectRatio="1"
        font="_s(NoLimits/icomoon.ttf)"
        charcode="e906"
        color="glm::vec4(255)">
      </FontIcon>
      <Element
        marginLeft="10dp"
        width="150dp"
        height="60%"
        borderRadius="glm::vec4(15)"
        backgroundColor="glm::vec4(255)">
        <Text
          text="DAILY TASKS"
          fontSize="16dp"
          textColor="#634db9">
        </Text>
      </Element>
      <Element
        marginLeft="10dp"
        width="150dp"
        height="60%"
        borderRadius="glm::vec4(15)"
        borderSize="2dp"
        borderColor="glm::vec4(255)">
        <Text
          text="MISSIONS"
          fontSize="16dp"
          textColor="glm::vec4(255)">
        </Text>
      </Element>
    </Element>
    <Element>
      <Element
        marginRight="20dp"
        aspectRatio="1"
        height="60%"
        borderRadius="glm::vec4(20)"
        backgroundColor="#ff0054">
        <FontIcon
          width="20dp"
          aspectRatio="1"
          font="_s(NoLimits/icomoon.ttf)"
          charcode="e911"
          color="glm::vec4(255)">
        </FontIcon>
      </Element>
    </Element>
  </Element>
  <Element
    element="mScroll"
    orientation="Vertical"
    width="100%"
    height="100%"
    overflow="Scroll"
    scaling="Shrink"
    alignItemsHor="Center">
  </Element>

</Element>
</Element>